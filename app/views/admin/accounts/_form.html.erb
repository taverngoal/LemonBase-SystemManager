<%= simple_form_for([:admin, @admin_account], html: {class: 'form-horizontal', role: 'form'}) do |f| %>

    <%= f.input :title, :wrapper => :horizontal_input, label_html: {class: 'col-sm-2'}, input_html: {class: 'form-control'} %>

    <%= f.input :amount, :wrapper => :horizontal_input, label_html: {class: 'col-sm-2'}, input_html: {class: 'form-control', disabled: ('disabled' if @admin_account.id)} %>

    <%= f.input :is_public %>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.button :submit, t('buttons.submit'), class: 'btn-default' %>
      </div>
    </div>
<% end %>
