<%= render 'nav' %>

<%= grid(@admin_users, show_filters: :no) do |g|

  g.column name: 'ID' do |app|
    app.id
  end

  g.column name: t('simple_form.labels.user.name') do |app|
    link_to(app.name, admin_user_path(app))
  end


  g.column name: t('simple_form.labels.user.email') do |app|
    app.email
  end


  g.column name: t('simple_form.labels.user.nick') do |app|
    app.nick
  end

  g.column name: t('simple_form.labels.user.birth') do |app|
    app.birth
  end

  g.column name: t('simple_form.labels.user.address') do |app|
    app.address
  end

  g.column name: t('simple_form.labels.user.phone') do |app|
    app.phone
  end


  g.column name: t('buttons.actions') do |app|

    link_to(t('buttons.delete'), {action: :destroy, id: app.id}, method: :delete, data: {confirm: '确定删除?'})
  end
end -%>
