<%= simple_form_for([:admin, @admin_user], html: {class: 'form-horizontal', role: 'form'}) do |f| %>
    <%= f.error_notification %>
    <%= f.input :email, as: :email, :wrapper => :horizontal_input, label_html: {class: 'col-sm-2'}, input_html: {class: 'form-control'} %>
    <%= f.input :password, :wrapper => :horizontal_input, label_html: {class: 'col-sm-2'}, input_html: {class: 'form-control'} %>
    <%= f.input :password_confirmation, :wrapper => :horizontal_input, label_html: {class: 'col-sm-2'}, input_html: {class: 'form-control'} %>
    <%= f.input :name, :wrapper => :horizontal_input, label_html: {class: 'col-sm-2'}, input_html: {class: 'form-control'} %>
    <%= f.input :nick, :wrapper => :horizontal_input, label_html: {class: 'col-sm-2'}, input_html: {class: 'form-control'} %>
    <%= f.input :birth, as: :string, :wrapper => :horizontal_input, label_html: {class: 'col-sm-2'}, input_html: {class: 'form-control'} %>
    <%= f.input :address, :wrapper => :horizontal_input, label_html: {class: 'col-sm-2'}, input_html: {class: 'form-control'} %>
    <%= f.input :phone, :wrapper => :horizontal_input, label_html: {class: 'col-sm-2'}, input_html: {class: 'form-control'} %>


    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.button :submit, t('buttons.submit'), class: 'btn-default' %>
      </div>
    </div>
<% end %>
