<div class="container" style="margin-top:10%">
  <div class="text-center" style="font-size: 94px; color:#ec971f;">L<i class="fa fa-lemon-o" style="font-size: 72px;"></i>gin</div>
  <div class="col-sm-3 center-block" style="float: none">
    <%= form_tag(url_for :controller => :admin, action: :sign_in, method: :post) do -%>
        <% if flash[:alert] -%>
            <div class="alert alert-danger" role="alert">
              <button type="button" class="close" data-dismiss="alert">
                <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
              <%= flash[:alert] %>
            </div>
        <% end -%>
        <div class="form-group">
          <input class="form-control input-lg" name="email" placeholder="Email">
        </div>
        <div class="form-group">
          <input class="form-control input-lg" type="password" name="password" placeholder="Password">
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-warning btn-lg btn-block">Sign In</button>
        </div>
    <% end -%>
  </div>
</div>