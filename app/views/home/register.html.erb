<div class="container" style="margin-top:10%">
  <div class="text-left col-sm-offset-3" style="font-size: 64px; color:#428bca;">
    R<i class="fa fa-lemon-o" style="font-size: 48px;"></i>gister
  </div>
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_tag(url_for(home_sign_up_path), method: :post) do -%>
        <% if flash[:error]
             flash[:error].each do |k, v| %>
                <div class="alert alert-danger" role="alert">
                  <button type="button" class="close" data-dismiss="alert">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                  <%= v %>
                </div>
            <% end end %>
        <div class="form-group">
          <label for="email">Email</label>
          <input id="email" class="form-control input-lg" name="user[email]">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input id="password" class="form-control input-lg" type="password" name="user[password]">
        </div>
        <div class="form-group">
          <label for="password_confirmation">Password Confirmation</label>
          <input id="password_confirmation" class="form-control input-lg" type="password" name="user[password_confirmation]">
        </div>
        <div class="form-group">
          <%= link_to 'Login', home_login_path, class: 'btn btn-warning btn-lg col-sm-3' %>
          <button type="submit" class="btn btn-primary btn-lg col-sm-8 col-sm-offset-1">Sign Up</button>
        </div>
    <% end -%>
  </div>
</div>