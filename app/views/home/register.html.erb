<div class="container" style="margin-top:10%">
  <div class="text-left col-sm-offset-3" style="font-size: 64px; color:#428bca;">
    R<i class="fa fa-lemon-o" style="font-size: 48px;"></i>gister
  </div>
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_tag(url_for(home_sign_up_path), method: :post) do -%>
        <div class="form-group <%= 'has-error' if @errors[:email] if @errors %>">
          <label for="email" class="control-label">Email</label>
          <input id="email" class="form-control input-lg" name="user[email]">
          <% if @errors %>
              <div class="error">
                <%= @errors[:email][0] if  @errors[:email] %>
              </div>
          <% end %>
        </div>
        <div class="form-group <%= 'has-error' if @errors[:password] if @errors %>">
          <label for="password" class="control-label">Password</label>
          <input id="password" class="form-control input-lg" type="password" name="user[password]">
          <% if @errors %>
              <div class="error">
                <%= @errors[:password][0] if  @errors[:password] %>
              </div>
          <% end %>
        </div>
        <div class="form-group <%= 'has-error' if @errors[:password_confirmation] if @errors %>">
          <label for="password_confirmation" class="control-label">Password Confirmation</label>
          <input id="password_confirmation" class="form-control input-lg" type="password" name="user[password_confirmation]">
          <% if @errors %>
              <div class="error">
                <%= @errors[:password_confirmation][0] if  @errors[:password_confirmation] %>
              </div>
          <% end %>
        </div>
        <div class="form-group">
          <%= link_to 'Login', home_login_path, class: 'btn btn-warning btn-lg col-sm-3' %>
          <button type="submit" class="btn btn-primary btn-lg col-sm-8 col-sm-offset-1">Sign Up</button>
        </div>
    <% end -%>
  </div>
</div>